<Window x:Class="Svaha.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Svaha"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите возраст женихов (через пробел)" />
            <TextBox x:Name="GroomsTextBox" Margin="0 5 0 10"/>
            <TextBlock Text="Введите возраст невест (через пробел):" />
            <TextBox x:Name="BridesTextBox" Margin="0 5 0 10"/>
            <TextBlock Text="Введите разницу в возрастах:" />
            <TextBox x:Name="KTextBox" Margin="0 5 0 10"/>
            <Button Content="Сформировать пары" Click="FindMatchesButton_Click" Margin="0 10"/>
            <TextBlock Text="Пары:" Margin="0 10 0 5"/>
            <TextBox x:Name="MatchesTextBox" Height="150" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
